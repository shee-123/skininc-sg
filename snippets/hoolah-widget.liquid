{%- assign hoolah-base-price = hoolah_base_price | money_without_currency -%}


{%- if type == 'collection' -%}
  <div class="hoolah_collection_widget" data-price="{{ hoolah-base-price  }}" data-currency="{{ shop.currency }}"></div>


{%- else if type == 'product' -%}
  <div class="hoolah_product_widget" data-price="{{ hoolah-base-price }}" data-currency="{{ shop.currency }}"></div>
{%- endif -%}
