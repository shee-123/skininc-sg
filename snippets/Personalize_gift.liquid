<div id="Yes_no">
  {% for block in section.blocks %}
  {% if block.type == 'personalise_your_gift' %}
  <h4 id="main_yes" onclick="main_yes()">{{block.settings.title}}</h4>
  <div class="inner_personal">   
  {% if block.settings.buy_gift %}
  <div class="radio-group">
    <p>{{block.settings.buy_gift_text}}</p>
    <input type="radio" id="yes-button" class="asGift attrCartCheck" name="attributes[As Gift]" value="yes"{% if cart.attributes["As Gift"] == "yes" %} checked="checked"{% endif %}>
    <label for="yes-button">Yes</label>
    <input type="radio" id="no-button" class="asGift attrCartCheck" name="attributes[As Gift]" value="no"{% if cart.attributes["As Gift"] == "no" %} checked="checked" {% endif %} {% unless cart.attributes["As Gift"] %} checked="checked"{% endunless %}>
    <label for="no-button">No</label>
  </div>
  {% endif %} 
  {% if block.settings.gift_wrapping %}
  <div class="radio-group">
    <p>{{block.settings.gift_wrapping_text}}</p>
    <input type="radio" name="attributes[gift-wrapping]" class="gift-wrapping attrCartCheck" value="yes"{% if cart.attributes["gift-wrapping"] == 'yes' %} checked="checked"{% endif %} id="yes-button2">
    <label for="yes-button2">Yes</label>
    <input type="radio" name="attributes[gift-wrapping]" class="gift-wrapping attrCartCheck" value="no" {% unless cart.attributes["gift-wrapping"] == 'yes'%} checked="checked"{% endunless %} id="no-button2">
    <label for="no-button2">No</label>
  </div>
  {% endif %}
  {% if block.settings.perso_mess %}
  <div class="radio-group">
    <p>{{block.settings.personalized_message_text}}</p>
    <input type="radio" name="attributes[Gift Message]" class="giftMessage attrCartCheck" value="yes" {% if cart.attributes["Gift Message"] == "yes" %} checked="checked"{% endif %} id="yes-button3">
    <label for="yes-button3">Yes</label>
    <input type="radio" name="attributes[Gift Message]" class="giftMessage attrCartCheck" value="no" {% if cart.attributes["Gift Message"] == "no" %} checked="checked"{% endif %} id="no-button3" {% unless cart.attributes["Gift Message"] %} checked="checked"{% endunless %}>
    <label for="no-button3">No</label>
  </div>
  <div id="pers_meg" class="gift_text" style="{% if cart.attributes["Gift Message"] == "yes" %}{% else %}display: none{% endif %}">
    <textarea {% if cart.attributes["Gift Message"] == "yes" %}required {% endif %} class="Form__Textarea {% if cart.attributes["Gift Message"] == "yes" %}required{% endif %}" name="attributes[Gift Note]" id="pers_meg" placeholder="Write your message here">{{cart.attributes["Gift Note"]}}</textarea>             
  </div> 
  {% endif %}                  
  {% if block.settings.pers_stiker %}
  <div class="radio-group">
    <p>{{block.settings.pers_stiker_text}}</p>
    <input type="radio" name="attributes[personalized-sticker]" class="persSticker attrCartCheck" value="yes"{% if cart.attributes["personalized-sticker"] == "yes" %} checked="checked"{% endif %} id="yes-button4">
    <label for="yes-button4">Yes</label>
    <input type="radio" name="attributes[personalized-sticker]" class="persSticker attrCartCheck" value="no"{% unless cart.attributes["personalized-sticker"] == "yes" %} checked="checked"{% endunless %} {% unless cart.attributes["Personalized Sticker"] %} checked="checked"{% endunless %} id="no-button4">
    <label for="no-button4">No</label>
  </div> 
  <div id="pers_stiker" class="gift_text" style="{% if cart.attributes["Personalized Sticker"] == "yes" %}{% else %}display: none{% endif %}">                
    <div class="main_selc">
      <img src="{% if cart.attributes["Sticker Url"]%} {{cart.attributes["Sticker Url"]}} {% endif %}">
      <input type="hidden" id="stickerUrl" name="attributes[Sticker Url]" value="{% if cart.attributes["Sticker Url"] != blank %}{{cart.attributes["Sticker Url"]}} {% endif %}" id="sticker_url">
    </div>
    <div class="img_selc">
      <input type="hidden" name="attributes[Sticker Variant]" id="image_variant" value="{{cart.attributes["Sticker Variant"]}}">
      
      {% assign persProduct = all_products.personalised-sticker %}
      
      
      {% for variant in persProduct.variants %}          			
      
      	<img src="{{ variant.image.src | img_url: "1024x1024" }}" id="{{variant.id}}" data-name="{{variant.title}}" class="pers-sticker-img">
      	
	  {% endfor %}
      
      
      {% comment %}
      <img src="{{ block.settings.image1 | img_url: 'master' }}" id="sticker1">
      <img src="{{ block.settings.image2 | img_url: 'master' }}" id="sticker2">
      <img src="{{ block.settings.image3 | img_url: 'master' }}" id="sticker3">
      {% endcomment %}
    
    
    </div>
  </div>
  {% endif %} 
  </div>

  {% endif %}
  {% endfor %}   
</div> 