<div class="treatment_text">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.text }}</p>
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="treatment_text{% if section.settings.title_enable %} logo-bar--large{% endif %}">
      {% for block in section.blocks %}
        <div class="treat-bar__item{% if section.settings.title_enable %} logo-bar__item--large{% endif %}" {{ block.shopify_attributes }}>
          <div class="left-logo-text">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: 'master' }}">
          {% else %}
            <img src="https://cdn.shopify.com/s/files/1/0034/6780/4770/files/icon.png?2786506787789510682" alt="icon_placeholder">
          {% endif %}
          </div>
          <div class="right-logo-text">
          <div class="tret_logo"> 
            
            <div class="tret_logo_text">
            {% if block.settings.icon-text != blank %}
            <p class="icon_text">  {{ block.settings.icon-text }}</p>
            {% endif %}

            {% if block.settings.icon-subtext != blank %}
            <p class="icon_subtext">  {{ block.settings.icon-subtext }}</p>
            {% endif %} 
            </div>
            {% if block.settings.image2 != blank %}
            <img src="{{ block.settings.image2 | img_url: 'master' }}">
            {% endif %}
              
          </div>    
            
          {% if block.settings.point-text != blank %}
          <p class="point_text">  {{ block.settings.point-text }}</p>
          {% endif %}
            
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
  
  
  <div class="book_an_app">
      <a href="#book_app">{{ section.settings.book }}</a>
  </div>
  
</div>

{% schema %}
  {
    "name": "Fuss Free Power",
    "class": "icon-text",
    "max_blocks": 4,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Section Heading"
      },
      {
        "type": "text",
        "id": "text",
        "label": "text"
      },
    {
      "type": "text",
      "id": "book",
      "label": "Book An Appointment "
      } 
    ],
    "blocks": [
      {
        "type": "icon_txt",
        "name": "Icon with Text",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
      {
            "type": "image_picker",
            "id": "image2",
            "label": "treatment_win_logo"
          },
          {
            "type": "text",
            "id": "point-text",
            "label": "point-text" 
          },
          {
            "type": "text",
            "id": "icon-text",
            "label": "Heading" 
          },
          {
            "type": "text",
            "id": "icon-subtext",
            "label": "Sub Heading" 
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Fuss Free Power",
        "category": "Custom Code"
      }
    ]
  }
{% endschema %}
